<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/grey_900</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorControlHighlight">@color/orange_900</item>
    </style>

    <style name="AppTheme.Launcher" >
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="BottomNavigationTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/grey_600</item>
        <item name="colorControlHighlight">@color/orange_900</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ListItemPopup" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/ListItemPopupAnim</item>
    </style>
    <style name="ListItemPopupAnim">
        <item name="android:windowEnterAnimation">@anim/animation</item>
        <item name="android:windowExitAnimation">@anim/animation</item>
    </style>

</resources>
